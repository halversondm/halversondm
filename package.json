{
  "name": "halversondm",
  "version": "1.0.0",
  "description": "The personal website of Dan Halverson - @halversondm",
  "main": "server.js",
  "scripts": {
    "clean": "rimraf dist && mkdir dist",
    "prestart": "npm run clean && cp -R app/runtime/* dist && cd dist && npm install",
    "start": "cross-env NODE_ENV=development concurrently \"npm run webpack -- --watch\" \"node dist/server.js\"",
    "tslint": "tslint -c tslint.json --fix 'app/**/*.{ts,tsx}'",
    "test": "jest",
    "prewebpack": "npm run tslint && npm run test",
    "webpack": "webpack --config ./webpack.config.js --profile --colors",
    "tsc": "tsc -w",
    "prebuild": "npm run clean",
    "build": "cross-env NODE_ENV=production npm run webpack"
  },
  "keywords": [
    "react"
  ],
  "author": "Dan Halverson <daniel.m.halverson@gmail.com> (http://halversondm.com/)",
  "license": "MIT",
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(tsx?|jsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json",
      "jsx"
    ]
  },
  "dependencies": {
    "@types/react": "15.0.38",
    "@types/react-bootstrap": "0.0.52",
    "@types/react-dom": "15.5.1",
    "@types/react-router": "4.0.14",
    "awesome-typescript-loader": "3.2.1",
    "aws-sdk": "2.4.13",
    "connect-history-api-fallback": "1.3.0",
    "react": "15.6.1",
    "react-bootstrap": "0.31.1",
    "react-dom": "15.6.1",
    "react-router": "4.1.2",
    "react-router-dom": "4.1.2"
  },
  "devDependencies": {
    "@types/es6-shim": "0.31.34",
    "@types/jest": "20.0.4",
    "assert": "1.4.1",
    "awesome-typescript-loader": "3.1.3",
    "body-parser": "1.17.2",
    "concurrently": "3.5.0",
    "copy-webpack-plugin": "4.0.1",
    "cross-env": "5.0.1",
    "css-loader": "0.28.4",
    "express": "4.15.3",
    "extract-text-webpack-plugin": "2.1.0",
    "file-loader": "0.11.2",
    "html-webpack-plugin": "2.29.0",
    "jest": "20.0.4",
    "mocha": "3.4.2",
    "morgan": "1.8.2",
    "react-test-renderer": "15.6.1",
    "rimraf": "2.6.1",
    "style-loader": "0.18.2",
    "ts-jest": "20.0.7",
    "tslint": "5.5.0",
    "tslint-react": "3.0.0",
    "typescript": "2.4.2",
    "wdio-junit-reporter": "0.3.0",
    "wdio-mocha-framework": "0.5.10",
    "webdriverio": "4.8.0",
    "webpack": "2.4.1"
  }
}
